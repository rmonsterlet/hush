{
  "name": "hush-server",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy-deps": "copy-newer --cwd node_modules ** ./dist/node_modules",
    "build": "tsc && node --inspect ./dist/server.js",
    "start": "node ./dist/server.js",
    "preserve": "npm run build",
    "s": "npm run serve",
    "serve": "concurrently \"npm run build.w\" \"nodemon --watch ./dist/server ./dist/server/server.js\"",
    "lint": "tslint \"src/**/*.ts\"",
    "prebuild": "npm install",
    "b": "npm run build.w",
    "build": "npm run copy-deps && tsc",
    "build.w": "npm run copy-deps && tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.2",
    "uuid": "^3.1.0",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/uuid": "^3.4.2",
    "@types/ws": "3.2.0",
    "copy-newer": "^2.1.2",
    "rimraf": "^2.6.2",
    "typescript": "^2.5.3"
  }
}
